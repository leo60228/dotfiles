[DEFAULT]
lib = 
    ifannex() {
        if [[ "$ISANNEX" == "1" ]]; then
            "$@"
        fi
    }
sync = ifannex git annex sync

[Programming/fusee-launcher]
checkout = git clone 'https://github.com/reswitched/fusee-launcher.git' 'fusee-launcher'

[Programming/HookedMethod]
checkout = git clone 'https://github.com/EverestAPI/HookedMethod.git' 'HookedMethod'

[Programming/MadelineEnergySelector]
checkout = git clone 'https://github.com/EverestAPI/MadelineEnergySelector' 'MadelineEnergySelector'

[Programming]
checkout = mkdir -p 'Programming'
lib = export ISANNEX=1

[Dotfiles]
checkout = git clone 'https://github.com/leo60228/dotfiles.git' 'Dotfiles'
lib = export ISANNEX=1

[Documents]
checkout = mkdir -p 'Documents'
lib = export ISANNEX=1

[Programming/Everest]
checkout = git clone 'https://github.com/EverestAPI/Everest.git' 'Everest'
